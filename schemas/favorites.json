{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "favorites commands",
    "description": "Favorite commands",
    "type": "object",
    "required": [
        "$schema",
        "data"
    ],
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "title": "schema",
            "description": "A schema used for validation",
            "type": "string"
        },
        "data": {
            "title": "data",
            "description": "Data",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "favorite command",
                "description": "A favorite command",
                "type": "object",
                "required": [
                    "name",
                    "command"
                ],
                "additionalProperties": false,
                "properties": {
                    "name": {
                        "title": "name",
                        "description": "A name of the command displayed in a choice list",
                        "type": "string",
                        "minLength": 1,
                        "pattern": "^[A-Z]",
                        "not": {
                            "pattern": "^\\s+|\\s+$"
                        },
                        "examples": [
                            "Google Chat",
                            "Visual Studio Code"
                        ]
                    },
                    "command": {
                        "title": "command",
                        "description": "A command to be executed",
                        "type": "string",
                        "minLength": 1,
                        "pattern": "[^ ]",
                        "not": {
                            "pattern": "^\\s+|\\s+$"
                        },
                        "examples": [
                            "flatpak run org.mozilla.firefox APPLICATION",
                            "code DIRECTORY"
                        ]
                    },
                    "is-terminal": {
                        "title": "is terminal",
                        "description": "Specify whether the command is a terminal one\nðŸ“• Note: It's required to set this to 'true' for terminal applications to open correctly",
                        "type": "boolean"
                    }
                }
            }
        }
    }
}